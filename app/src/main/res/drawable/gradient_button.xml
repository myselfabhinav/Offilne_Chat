<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent -->
            <corners android:radius="12dp"/>
            <padding android:left="0dp" android:top="2dp" android:right="0dp" android:bottom="2dp"/>
            <size android:width="match_parent" android:height="wrap_content"/>
            <gradient
                android:startColor="#00000000"
                android:endColor="#55000000"
                android:angle="90"/>
        </shape>
    </item>
    <!-- Button Layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/buttonColorStart"
                android:endColor="@color/buttonColorEnd"
                android:angle="45"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
